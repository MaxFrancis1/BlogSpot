@model List<BlogSpot.Web.Models.Domain.Tag>

<h1>TagList</h1>


<table class="table">
    <thead>
        <tr>
            
            <th>ID</th>
            <th>Name</th>
            <th>Display Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model) 
        {
            <tr>
                <td>@tag.Id</td>
                <td>@tag.Name</td>
                <td>@tag.DisplayName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tag.Id">Edit</a> | 
                    <a asp-action="TagDelete" asp-route-id="@tag.Id" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
