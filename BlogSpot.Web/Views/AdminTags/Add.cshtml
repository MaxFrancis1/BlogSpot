@model BlogSpot.Web.Models.ViewModels.AddTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag</h1>
    </div>
</div>

 <div class="container py-5">
    <h4>New tag details</h4>
    <form method="post">
        <div class="row mb-3">
            <div class="col">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="HTML" id="name" asp-for="Name">
            </div>
            <div class="col">
                <label class="form-label">Display Name</label>
                <input type="text" class="form-control" placeholder="HTML Blogs..." id="displayName" asp-for="DisplayName">
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
