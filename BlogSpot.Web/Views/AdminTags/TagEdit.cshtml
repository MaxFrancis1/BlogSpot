@model BlogSpot.Web.Models.Domain.Tag

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="row mb-3">
            <div class="col">
                <label class="form-label">ID</label>
                <input type="text" class="form-control" asp-for="Id" readonly>
            </div>
            <div class="col">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name">
            </div>
            <div class="col">
                <label class="form-label">Display Name</label>
                <input type="text" class="form-control" asp-for="DisplayName">
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary ms-3" asp-controller="AdminTags" asp-action="TagEdit">Save</button>
        </div>
    </form>
</div>
