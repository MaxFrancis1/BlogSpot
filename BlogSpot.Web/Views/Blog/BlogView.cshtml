@model BlogSpot.Web.Models.Domain.BlogPost

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <div class="bg-secondary bg-opacity-10 py-2">
        <div class="container">
            <h1>View Blog</h1>
        </div>
    </div>

</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card" style="width: 75%;">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.FeaturedImageUrl" class="img-fluid" alt="Blog Image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h1 class="card-title">@Model.Heading</h1>
                                <p class="card-text"><small class="text-muted">Published on @Model.PublishedDate.ToShortDateString() by @Model.Author</small></p>
                                <p class="card-text">@Html.Raw(Model.Content)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
